{{#if addNewQuestion}}
  <h4>Add a Question</h4>
  <div class="newQuestion">
    <form>
      <label for="questionAuthor">Your Name</label>
      {{input value=questionAuthor id="questionAuthor"}}

      <label for="questionContent">Your Question</label>
      {{textarea value=questionContent id="questionContent" rows="5"}}

      <label for="notes">Additional Notes</label>
      {{textarea value=notes id="notes" rows="5"}}

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}} class="btn btn-info">Ask a New Question</button>
{{/if}}
