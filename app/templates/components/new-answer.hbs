<div class="container">
  {{#if addNewAnswer}}
    <form class="form-new-answer">
      <h2 class="form-new-answer-heading">New Answer</h2>
      <label for="answerAuthor" class="sr-only">Your Name</label>
      {{input value=answerAuthor id="answerAuthor" placeholder="Your Name" class="form-control"}}
      <label for="answerContent" class="sr-only">Type something here ...</label>
      {{textarea value=answerContent id="answerContent" rows="4" placeholder="Type something here ..." class="form-control"}}
      <button class="btn btn-lg btn-primary btn-block"  {{action 'saveAnswer'}}>Save</button>
    </form>
    {{else}}
    <button class="btn btn-info" {{action "answerFormShow"}}>Add an Answer</button>
  {{/if}}
</div>
