<div class="container">
  <div class="row">
    <div class="col-sm-8 qa-main">
      <h2>Question</h2>
      <div class="question-detail">
        <blockquote>{{model.questionContent}}</blockquote>
        <div class="question-notes">
          <p><strong>Additional notes: </strong>{{model.notes}}</p>
        </div>
        <p class="question-post-meta">By <strong>{{model.questionAuthor}}</strong> on <strong>{{model.date}}</strong></p>
      </div>
      {{edit-question question=model updateQuestion="updateQuestion" destroyQuestion="destroyQuestion"}}
    </div>
    <hr>
  </div>
  <div class="row">
    <div class="col-sm-8 qa-main">
      <h2>Answers</h2>
      {{new-answer question=model saveAnswer="saveAnswer"}}
      <br><br>
      {{#each model.answers  as |answer|}}
        {{answer-tile answer=answer}}
      {{/each}}
    </div>
  </div>
</div>
